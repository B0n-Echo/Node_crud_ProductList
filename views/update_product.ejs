
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Products</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Product</h2>
            <span class="text-light">Use the below form to Update a Product</span>
        </div>

         <!-- form handling -->
 <form method="POST" id="update_product">
    <div class="new_product">
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="<%= product._id %>">
            <input type="text" name="name" value="<%= product.product_name %>" placeholder="Metal Planter">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Price($)</label>
            <input type="text" name="email" value="<%= product.price%>" placeholder="340.00">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Demand</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="demand" value="High" <%= product.demand == 'High' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="demand" value="Low" <%= product.demand == 'Low' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Low</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
