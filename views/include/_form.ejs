 <!-- form handling -->
 <form action="/api/products" method="POST" id="add_product">
    <div class="new_product">
        <div class="form-group">
            <label for="product_name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="product_name" value="" placeholder="Metal Planter">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Price($)</label>
            <input type="text" name="price" value="" placeholder="340.00">
        </div>
        <div class="form-group">
            <label for="demand" class="text-light">Demand</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="demand" value="High" >
                <label for="radio-4" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="demand" value="Low" >
                <label for="radio-5" class="radio-label">Low</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>